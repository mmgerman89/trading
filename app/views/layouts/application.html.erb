<!DOCTYPE html>
<html class="minimal-theme">
  <head>
    <title>Juegos</title>

    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= favicon_link_tag 'template/favicon-32x32.png' %>
  
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>

    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
  </head>

  <body>
    <!--start wrapper-->
    <div class="wrapper">
      <%= render partial: 'layouts/template/top_header' %>
      <%= render partial: 'layouts/template/sidebar' %>
      
      <!--start content-->
      <main class="page-content">
        <%= yield %>
      </main>
      <!--end page main-->
      <%= render partial: 'layouts/template/bottom' %>
    </div>
    <!--end wrapper-->
    
    <%= render partial: 'layouts/template/scripts_js' %>
  </body>
</html>
